<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawercontenedor"
    tools:context=".cuarta_pant_informacion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/iconomenu_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textproyec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/londrina_sketch"
                android:gravity="center"
                android:text="Proyecto Refor_Accion Conservacion del medio ambiente"
                android:textAllCaps="true"
                android:textColor="#1A1C1A"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btn1.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generando impacto postivo de la siembra de arboles"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#121111"
                android:textSize="20sp"
                android:backgroundTint="#52AAE6B1"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"



                />

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include
            layout="@layout/nav_drawer"/>

    </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>